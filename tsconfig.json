{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["scripthost", "webworker", "dom", "es2018", "esnext.asynciterable"],
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "graphql-resolvers": ["lib/typings/custom"]
        }
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "lib/typings/*.d.ts"
    ]
}
